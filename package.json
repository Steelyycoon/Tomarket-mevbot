{
  "name": "web3.storage",
  "version": "1.0.0",
  "private": true,
  "license": "(Apache-2.0 AND MIT)",
  "workspaces": [
    "packages/api",
    "packages/client",
    "packages/cron",
    "packages/db",
    "packages/pinpin",
    "packages/w3",
    "packages/website",
    "packages/pinpin",
    "packages/tools"
  ],
  "scripts": {
    "start": "npm-run-all --print-label -p web api",
    "api": "npm start -w packages/api",
    "web": "npm start -w packages/website",
    "test": "npm run lint && npm run test --workspaces",
    "test:e2e": "npm run test:e2e --if-present --workspaces",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix "
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "packages/website"
    ]
  },
  "engines": {
    "node": "16.x",
    "npm": ">=7.x"
  }
}
